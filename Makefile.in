	$(CXX) -c ffcairo/avc_channel.cpp -o obj/avc_channel.o

obj/avc_agent.o: ffcairo/avc_agent.cpp ffcairo/avc_agent.h
	$(CXX) -c ffcairo/avc_agent.cpp -o obj/avc_agent.o

