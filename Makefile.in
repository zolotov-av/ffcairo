obj/scale.o: ffcairo/scale.cpp ffcairo/scale.h ffcairo/ffctypes.h
	$(CXX) -c ffcairo/scale.cpp -o obj/scale.o

obj/ffcmisc.o: ffcairo/ffcmisc.cpp ffcairo/ffcmisc.h ffcairo/ffctypes.h
