	$(CXX) $(LDFLAGS) -o avc_server avc_server.cpp -L. -lffcairo $(LIBS) -ludns

avc_feeder: avc_feeder.cpp libffcairo.a ffcairo/config.h
	$(CXX) $(LDFLAGS) -o avc_feeder avc_feeder.cpp -L. -lffcairo $(LIBS) -ludns

